<div class="profile-container">
 <div class="container">
  <div class="row">
   <div class="col-xs-3"> 
    <%= render 'books/list', books: @books, user: @user %>
   </div>

    <div class="col-xs-9">
      <h2>Users</h2>
       <table class="table">
        <thead>
         <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
         </tr>
        </thead>

        <tbody>
         <% @users.each do |user| %>
         <tr>
         <div class="user-show-image">
          <td><%= attachment_image_tag user, :profile_image, size: "40x40", format: 'jpeg', class: "img-circle profile-img", fallback: "no_image.jpg" %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user) %></td>
         <% end %>
         </div>
         </tr>
         </tbody>
        </table>
    </div>
  </div>
 </div>
</div>