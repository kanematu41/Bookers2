<div class="profile-container">
 <div class="container">
  <div class="row">
   <div class="col-xs-3"> 
    <%= render 'books/list', books: @books, user: @user %>
   </div>

    <div class="col-xs-9">
      <h2>Books</h2>
       <table class="table table-hover">
        <thead>
         <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
         </tr>
        </thead>

        <tbody>
        <% @books.each do |book| %>
         <tr> 
          <td><%= attachment_image_tag @user, :profile_image, size: "40x40", format: 'jpeg', class: "img-circle profile-img", fallback: "no_image.jpg" %></td>
          <td><%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
          </td>
          <td><%= book.body %></td>
         </tr>  
        <% end %>
        </tbody>   
       </table>
    </div>
  </div>
 </div>
</div>
