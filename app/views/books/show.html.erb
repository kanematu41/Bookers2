<div class="profile-container">
 <div class="container">
  <div class="row">
   <div class="col-xs-3"> 
    <%= render 'books/list', books: @books, user: @user %>
   </div>

    <div class="col-xs-9">
	    <h2>Book detail</h2>
       <table class="table">
        <tbody>
         <tr>
          <th><%= attachment_image_tag @user, :profile_image, size: "40x40", format: 'jpeg', class: "img-circle profile-img", fallback: "no_image.jpg" %><%= link_to @book.user.name, user_path(@user) %>
          </th>
          <th><%= @book.title %></th>
          <th><%= @book.body %></th>

          <th><% if @book.user == current_user %>
               <%= link_to edit_book_path(@book), class: 'btn btn-success btn-xs' do %>Edit</th>
               <% end %>
               <% end %>
          <th><% if @book.user == current_user %>
               <%= link_to book_path(@book), method: :delete, data: { confirm: 'Are you sure' },class: 'btn btn-danger btn-xs' do %>Destroy</th>
               <% end %>
              <% end %>
          </tr>
         </tbody>
        </table>
    </div>
  </div>
 </div>
</div>

