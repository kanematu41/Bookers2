 <p id="notice"><%= flash[:notice] %></p>
 
     <h2>User info</h2>
      <div class="user-show-image">
        <%= attachment_image_tag @user, :profile_image, size: "80x80", fallback: "no_image.jpg", class: "img-circle profile-thumb" %>
      </div><br>

      <table class="table">
        <tbody>
         <tr>
          <th>name</th>
          <th><%= @user.name %></th>
          </tr>
         <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
         </tr>
        </tbody>
       </table>

        <p><%= link_to edit_user_path(@user), class: "btn btn-default btn-block" do %><span class="glyphicon glyphicon-wrench" aria-hidden="true">
        </span><% end %></p>

     <section>
      <h2>New book</h2>

      <%= form_for(Book.new) do |f| %>

      <div class="form-group">
        <label>Title</label>
        <%= f.text_field :title, class:"form-control"%>
      </div>

      <div class="form-group">
        <label>Opinion</label>
        <%= f.text_area :body, class:"form-control"%>
      </div>

      <div class="form-group">
        <%= f.submit 'Create Book', class: "btn btn-primary btn-block"%>
      </div>

      <% end %>
     </section>



